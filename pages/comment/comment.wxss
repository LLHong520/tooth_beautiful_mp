.container {
  padding: 0 32rpx;
}
.post_topic_wrapper{
  width: 100%;
  box-sizing: border-box;
}
.form {
  background-color: #fff;
  color: #aaa;
}
.form .inp_text_wrapper {
  padding: 28rpx 10rpx;
  border-bottom: 1rpx dashed #D9D9D9;
}
.form .count {
  color: #ccc;
  font-size: 24rpx;
  text-align:right;
}
.form .none-border{
  border:none
}
.form  textarea {
  width: 100%;
  height: 500rpx;
  line-height: 30rpx;
  font-size:32rpx;
  color:#333;
  border: 0;
  background: none;
  z-index:0;
}
.form input{
  width: 100%;
  line-height: 28rpx;
  color:#333;
  font-size:40rpx;
  border: 0;
  background: none;
}
.form .inp_text {
  line-height: 20rpx;
  height: 20rpx;
  width: 100%;
  font-size: 26rpx;
  border: 0;
}
.post_topic_action{
  width:100%;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9998;
  text-align:center;
}
.primary_btn{
  margin: 0rpx;
  background:rgba(88,155,229,1)!important;
  box-shadow:0rpx 7rpx 26rpx -2rpx rgba(115,182,255,1);
  border-radius:45rpx;
  margin:20rpx;
}

::-webkit-input-placeholder { /* WebKit, Blink, Edge */
    color: #ccc;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color: #ccc;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
   color: #ccc;
}
:-ms-input-placeholder { /* Internet Explorer 10-11 */
   color: #ccc;
}
