.container {
  padding: 0 32rpx;
}
.home_page {
  width: 100%;
}
.article-wrapper {
  width: 100%;
}
.article-list {
  width: 100%;
}
.article-item {
  display: flex;
  border-bottom: 1px solid #f3f3f3;
  height: 160rpx;
  padding: 33rpx 0;
  position: relative;
}
.article-item .text-wrapper {
  flex: 1;
  padding-right: 30rpx;
}
.article-item text {
  display: block;
}
.article-item text.title {
  color: #383838;
  font-size: 30rpx;
  font-weight: 600;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.article-item .info {
  position: absolute;
  left: 0;
  bottom: 33rpx;
}
.article-item .info .image {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  display: inline-block;
  position: relative;
  top: 15rpx;
  background: #f5f5f5;
}
.article-item .info .name {
  color: #999999;
  font-size: 24rpx;
  display: inline-block;
}
.article-item .img-wrapper {
  width: 160rpx;
  height: 160rpx;
}
.article-item .img-wrapper image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background: #f5f5f5;
}
.image-wrapper {
  width: 100%;
}
.image-wrapper .image {
  width: 100%;
  height: 274rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
}
