/***自定义吐司***/
.toast-bg {
  position: fixed;
  top: 0;
  bottom: 0;
  z-index: 999999;
  width: 100%;
  height: 100%;
  //background: rgba(0, 0, 0, .2);
  background: #7F7F7F;
}
/*水平居中必备样式*/
.toast-center {
  position: fixed;
  z-index: 9999999;
  width: 100%;
  height: 100%;
  text-align: center;
}
.toast {
  z-index: 999999;
  border-radius: 10rpx;
  display: inline-block;
  padding: 20rpx 40rpx;
  max-width: 600rpx;
  font-size: 28rpx;
  color: #fff;
  //background: rgba(0, 0, 0, .5);
  background: #7F7F7F;
  text-align: center;
}
.toast-center .toast-text{
  z-index: 999999;
  display:block;
  background: #7F7F7F;
}
.toast-center .toast-icon{
  z-index: 999999;
}
/*垂直居中必备样式*/
.toast-center::after{
  content: '';
  display: inline-block;
  width: 0;
  height: 100%;
  vertical-align: middle;
}
.toast .toast-icon {
  display: block;
  margin: 0 auto 10rpx auto;
  width: 50rpx;
  height: 50rpx;
}
